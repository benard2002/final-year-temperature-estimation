                            }
                        },
                        x: {
                            grid: {
                                color: currentTheme === 'dark' ? '#334155' : '#f1f5f9'
                            },
                            ticks: {
                                color: currentTheme === 'dark' ? '#94a3b8' : '#64748b',
                                maxTicksLimit: 10
